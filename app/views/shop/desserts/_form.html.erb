<% if @dessert.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @dessert.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [:shop, @dessert] do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <br>

  <%= f.label :price, "Price" %>
  <%= f.text_field :price %>

  <br>

  <%= f.label :image, "Image (建議大小：400x400)" %>
  <%= f.file_field :image %>

  <br>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <br>

  <%= f.submit %>
<% end %>

<%= link_to '回到甜點櫃', shop_desserts_path %>
